# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://loyalty_user:mypassword101@localhost:5432/rudi_app

# Authentication
# Secret key for JWT tokens (generate a secure random string)
JWT_SECRET=mySecret101

# Maps and Location
# API key for map services (e.g., Mapbox or Google Maps)
MAPS_API_KEY=your_maps_api_key_here

# Application URLs
# Comma-separated list of allowed app URLs (e.g., http://localhost:3000,https://app.rudi.com)
APP_URLS=http://localhost:3000,https://merchant.rudi.com,https://customer.rudi.com

# CORS Origins
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000,https://merchant.rudi.com,https://customer.rudi.com

# Payment (Optional)
# Stripe public key for frontend integration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Storage (Optional)
# Bucket name for file storage (e.g., AWS S3 or similar)
STORAGE_BUCKET=your_storage_bucket_name

# QR Code Signing
# Secret key for signing QR codes and tokens
SIGNING_KEY=your_signing_key_here